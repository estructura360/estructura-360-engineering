{
  "include": ["server/**/*", "shared/**/*"],
  "exclude": [
    "node_modules",
    "client",
    "dist",
    "vite.config.ts",
    "server/vite.ts",
    "**/*.test.ts"
  ],

  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,

    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}
